<h1>Score</h1>

<table class="content-table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Score</th>
            <th>PlayedAt</th>
        </tr>
    </thead>
    <tbody>
            @foreach (var score in Model.Scores)
            {
                <tr>
                <td>@score.Player</td>
                <td>@score.Points</td>
                <td>@score.PlayedAt</td>
                </tr>
            }
    </tbody>
</table>

